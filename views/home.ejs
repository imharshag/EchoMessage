<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini-project</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-gray-300 flex flex-col min-h-screen">

    <!-- Header -->
    <header class="w-full bg-gray-800 p-4 shadow-lg flex justify-between items-center">
        <div class="flex items-center">
            <!-- Logo -->
            <div class="whisper-logo text-white text-2xl font-bold">
                <!-- Replace with your logo -->
                <span class="text-indigo-400">Whisper &#x1F92B;</span>
            </div>
        </div>
        <div class="flex items-center">
            <!-- Back Button -->
            <a class="bg-gray-700 hover:bg-gray-600 text-blue-400 rounded-md px-4 py-2 text-sm transition-transform transform hover:scale-105" href="/profile">Back</a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 p-6">
        <h3 class="text-4xl font-bold text-indigo-400 mb-5">Welcome Everyone</h3>

        <section class="mt-6">
            <h3 class="text-zinc-400 text-xl font-semibold mb-5">Every Rumor</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
                <% posts.reverse().forEach(function(post) { %>
                    <div class="w-full max-w-full p-6 rounded-lg border border-gray-700 bg-gray-800 shadow-lg transition-transform transform hover:scale-105">
                        <h4 class="text-indigo-400 text-lg font-semibold mb-2">Anonymous</h4>
                        <p class="text-sm tracking-tight text-gray-300"><%= post.content %></p>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>

</body>

</html>
