<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-800 text-gray-300 flex items-center justify-center min-h-screen p-4">
    <div class="w-full max-w-md bg-gray-900 p-8 rounded-lg shadow-lg">
        <h3 class="text-3xl font-bold mb-6 text-center text-indigo-400">Login</h3>

        <form action="/login" method="post" class="space-y-4">
            <input class="w-full px-4 py-3 bg-gray-700 text-gray-200 border-2 border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 placeholder-gray-400"
                type="email" placeholder="Email" name="email" required>
            <input class="w-full px-4 py-3 bg-gray-700 text-gray-200 border-2 border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 placeholder-gray-400"
                type="password" placeholder="Password" name="password" required>
            <input class="w-full px-4 py-3 bg-indigo-500 text-white rounded-md cursor-pointer hover:bg-indigo-600 transition duration-300"
                type="submit" value="Login">
        </form>

        <!-- Popup for error messages -->
        <div id="popup" class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-6 bg-blue-900 text-white rounded-lg shadow-lg w-11/12 max-w-sm hidden z-50">
            <span id="popupMessage"></span>
        </div>

        <div class="mt-6 text-center">
            <h3 class="text-sm">Don't have an account? <a class="text-indigo-400 hover:underline" href="/register">Register</a></h3>
        </div>
    </div>

    <script>
        function showPopup(message) {
            const popup = document.getElementById('popup');
            const popupMessage = document.getElementById('popupMessage');
            popupMessage.textContent = message;
            popup.classList.remove('hidden');
            setTimeout(() => popup.classList.add('hidden'), 5000); // Hide popup after 5 seconds
        }

        // Check if there's an error or success message in the URL
        const urlParams = new URLSearchParams(window.location.search);
        const error = urlParams.get('error');
        const success = urlParams.get('success');

        if (error) {
            showPopup(error);
        } else if (success) {
            showPopup(success);
        }
    </script>
</body>

</html>
