<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini-project</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex gap-3 justify-end">
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block mt-3" href="/register">Logout</a>
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block mt-3" href="/home">Secrets</a>
        </div>
        <h3 class="text-3xl mb-5"> <span class="font-light">Hello</span>, <%= user.name %></h3>
        <h5 class="mb-5">Create a new blog</h5>

        <form action="/post" method="POST">
            <textarea placeholder="What's on your mind?" class="w-1/3 p-3 outline-none resize-none bg-transparent border-2 border-zinc-800 rounded-md" name="content"></textarea>
            <input class="px-3 py-2 bg-blue-500 block rounded-md mt-2 w-30" type="submit" value="Tell your thoughts">
        </form>

        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your posts</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function(post) { %>
                    <div class="post w-1/3 p-4 mb-4 rounded-md border-2 border-zinc-700 bg-zinc-900">
                        <h4 class="text-blue-500 mb-2"><%= user.username %></h4>
                        <p class="text-sm tracking-tight"><%= post.content %></p>
                        <div class="btns flex gap-4 mt-5">
                            <a class="text-zinc-400" href="/edit/<%= post._id %>">Edit</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

</body>
</html>
