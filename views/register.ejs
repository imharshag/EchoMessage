<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatter-Class</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .popup {
            display: none;
            position: fixed;
            top: 25%;
            left: 62%;
            transform: translate(-50%, -20%);
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
            border-radius: 8px;
            z-index: 1000;
        }
        .popup.show {
            display: block;
        }
    </style>
</head>
<body>

    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <h3 class="text-3xl mb-5">Create Your Account</h3>

        <form action="/register" method="post">
            <input class="px-3 py-2 outline-none bg-transparent border-2 border-zinc-800" type="text" placeholder="name" name="name">
            <input class="px-3 py-2 outline-none bg-transparent border-2 border-zinc-800" type="text" placeholder="username" name="username">
            <input class="px-3 py-2 outline-none bg-transparent border-2 border-zinc-800" type="email" placeholder="email" name="email">
            <input class="px-3 py-2 outline-none bg-transparent border-2 border-zinc-800" type="password" placeholder="password" name="password">
            <input class="px-3 py-2 rounded-md bg-blue-300" type="submit" value="Create Account">
        </form>

        <!-- Popup for error messages -->
        <div id="popup" class="popup">
            <span id="popupMessage"></span>
        </div>

        <div class="w-full min-h-screen bg-zinc-900 text-white p-3">
            <h3 class="text-small mb-5">Already a user? <a class="text-zinc-400" href="/login" class="text-blue-500 underline">Login</a></h3>
        </div>
    </div>

    <script>
        // Function to show the popup
        function showPopup(message) {
            const popup = document.getElementById('popup');
            const popupMessage = document.getElementById('popupMessage');
            popupMessage.textContent = message;
            popup.classList.add('show');
            setTimeout(() => popup.classList.remove('show'), 5000); // Hide popup after 5 seconds
        }

        // Check if there's an error or success message in the URL
        const urlParams = new URLSearchParams(window.location.search);
        const error = urlParams.get('error');
        const success = urlParams.get('success');

        if (error) {
            showPopup(error);
        } else if (success) {
            showPopup(success);
        }
    </script>

</body>
</html>
